<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ONGAndroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->


    </style>

    <style name="TitleFormStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/min_margin_padding_value_form</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/title_form_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FormStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/min_margin_padding_value_form</item>
        <item name="android:layout_marginRight">@dimen/min_margin_padding_value_form</item>
        <item name="android:background">@color/light_yellow</item>
    </style>

    <style name="TextInputLayoutFormStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/min_margin_padding_value_form</item>
        <item name="android:layout_marginLeft">@dimen/min_margin_padding_value_form</item>
        <item name="android:layout_marginRight">@dimen/min_margin_padding_value_form</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="EditTextFormStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:textCursorDrawable">@drawable/black_cursor</item>
    </style>

    <style name="ButtonFormStyle" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_between_buttons_and_field_form</item>
        <item name="android:layout_marginLeft">@dimen/min_margin_padding_value_form</item>
        <item name="android:layout_marginRight">@dimen/min_margin_padding_value_form</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/light_red</item>
    </style>
</resources>