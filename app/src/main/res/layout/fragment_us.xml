<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white_blue"
    tools:context=".view.fragments.UsFragment">

    <TextView
        android:id="@+id/tv_us_tittle"
        style="@style/TitleFormStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/us"
        app:layout_constraintBottom_toTopOf="@+id/tv_us_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_us_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="5"
        android:text="@string/lorem"
        android:textColor="#37474F"
        app:layout_constraintBottom_toTopOf="@+id/rv_us"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_us_tittle" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_us"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_us_description"
        tools:listitem="@layout/item_us" />

</androidx.constraintlayout.widget.ConstraintLayout>