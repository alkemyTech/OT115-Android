<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view_act="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_act"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    card_view_act:cardBackgroundColor="@color/primaryColor"
    card_view_act:cardCornerRadius="20dp"
    card_view_act:cardElevation="5dp"
    card_view_act:contentPadding="5dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_margin="15dp">


        <ImageView
            android:id="@+id/act_img"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="15dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/act_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/act_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:padding="10dp"
            android:text="@string/app_name"
            android:textColor="@color/primaryTextColor"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/act_txt"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:visibility="gone"/>

    </RelativeLayout>


</androidx.cardview.widget.CardView>
