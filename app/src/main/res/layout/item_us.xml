<?xml version="1.0" encoding="utf-8"?><!DOCTYPE androidx.constraintlayout.widget.ConstraintLayout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivUsPhotoOne"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:padding="@dimen/min_common_padding_margin"
        app:layout_constraintBottom_toTopOf="@+id/tvUsNameOne"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvUsNameOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/tvUsPositionOne"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivUsPhotoOne" />

    <TextView
        android:id="@+id/tvUsPositionOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvUsNameOne" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".33" />


    <ImageView
        android:id="@+id/ivUsPhotoTwo"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:padding="@dimen/min_common_padding_margin"
        app:layout_constraintBottom_toTopOf="@+id/tvUsNameTwo"
        app:layout_constraintEnd_toStartOf="@+id/guidelinetwo"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvUsNameTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        app:layout_constraintBottom_toTopOf="@+id/tvUsPositionTwo"
        app:layout_constraintEnd_toStartOf="@+id/guidelinetwo"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/ivUsPhotoTwo" />

    <TextView
        android:id="@+id/tvUsPositionTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/guidelinetwo"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/tvUsNameTwo" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinetwo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".66" />

    <ImageView
        android:id="@+id/ivUsPhotoThree"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:padding="@dimen/min_common_padding_margin"
        app:layout_constraintBottom_toTopOf="@+id/tvUsNameThree"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guidelinetwo"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvUsNameThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/tvUsPositionThree"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guidelinetwo"
        app:layout_constraintTop_toBottomOf="@+id/ivUsPhotoThree" />

    <TextView
        android:id="@+id/tvUsPositionThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guidelinetwo"
        app:layout_constraintTop_toBottomOf="@+id/tvUsNameThree" />

</androidx.constraintlayout.widget.ConstraintLayout>